                </field>


                <field id="opt_in_strategy" translate="label comment" sortOrder="10" type="select" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Opt-In Strategy</label>
                    <source_model>Emarsys\Emarsys\Model\Config\Source\OptInStrategy</source_model>
                </field>
                <field id="external_eventid_double_opt_in" translate="label comment" sortOrder="11" type="select"
                       showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>External Event Id for Double-Opt-In Event</label>
                    <depends>
                        <field id="opt_in_strategy">doubleOptIn</field>
                    </depends>
                    <source_model>Emarsys\Emarsys\Model\Config\Source\ExternalEventIdDoubleOptIn</source_model>
                </field>
                <field id="external_eventid_after_opt_in_confirmation" translate="label comment" sortOrder="12"
                       type="select" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>External Event Id After Opt-In confirmation</label>
                    <source_model>Emarsys\Emarsys\Model\Config\Source\ExternalEventIdAfterConfirm</source_model>
                </field>
            </group>
            <group id="subscription_customer_homepage" type="text" sortOrder="13" showInDefault="1" showInWebsite="1"
                   showInStore="0">
                <label>Subscription: Customer Action Page</label>
                <field id="opt_in_strategy" translate="label comment" sortOrder="10" type="select" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Opt-In Strategy</label>
                    <source_model>Emarsys\Emarsys\Model\Config\Source\OptInStrategy</source_model>
                </field>
                <field id="external_eventid_double_opt_in" translate="label comment" sortOrder="11" type="select"
                       showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>External Event Id for Double-Opt-In Event</label>
                    <depends>
                        <field id="opt_in_strategy">doubleOptIn</field>
                    </depends>
                    <source_model>Emarsys\Emarsys\Model\Config\Source\ExternalEventIdDoubleOptIn</source_model>
                </field>
                <field id="external_eventid_after_opt_in_confirmation" translate="label comment" sortOrder="12"
                       type="select" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>External Event Id After Opt-In confirmation</label>
                    <source_model>Emarsys\Emarsys\Model\Config\Source\ExternalEventIdAfterConfirm</source_model>
                </field>
            </group>
        </section>
        <section id="transaction_mail" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1"
                 showInStore="0">
