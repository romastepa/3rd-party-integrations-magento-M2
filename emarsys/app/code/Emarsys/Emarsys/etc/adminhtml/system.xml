                       showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>External Event Id for Double-Opt-In Event</label>
                    <depends>
                        <field id="opt_in_strategy">doubleOptIn</field>
                    </depends>
                    <source_model>Emarsys\Emarsys\Model\Config\Source\ExternalEventIdDoubleOptIn</source_model>
                </field>
                <field id="external_eventid_after_opt_in_confirmation" translate="label comment" sortOrder="12"
                       type="select" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>External Event Id After Opt-In confirmation</label>
                    <source_model>Emarsys\Emarsys\Model\Config\Source\ExternalEventIdAfterConfirm</source_model>
                </field>
            </group>
