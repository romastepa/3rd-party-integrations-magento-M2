<script>
    require(['prototype'], function () {
        function smartInsightApiTestConnection() {
            params = {
                'api_enable': document.getElementById('smart_insight_api_settings_enableapi').value,
                'merchant_id': document.getElementById('smart_insight_api_settings_merchant_id').value,
                'token': document.getElementById('smart_insight_api_settings_token').value,
                'max_record': document.getElementById('smart_insight_api_settings_max_records_per_export').value
            };
            new Ajax.Request('<?php echo $block->getAjaxUrl() ?>', {
                parameters: params,
                onSuccess: function (response) {
                    location.reload();
                }
            });
        }
        window.smartInsightApiTestConnection = smartInsightApiTestConnection;
    });
</script>
