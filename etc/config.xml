<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <emarsys_settings>
            <emarsys_setting>
                <enable>0</enable>
                <emarsys_api_endpoint>default</emarsys_api_endpoint>
            </emarsys_setting>
            <ftp_settings>
                <hostname>exchange.si.emarsys.net</hostname>
                <port>21</port>
                <ftp_bulk_export_dir>/</ftp_bulk_export_dir>
                <useftp_overssl>1</useftp_overssl>
                <usepassive_mode>1</usepassive_mode>
                <apiurl>https://api.github.com/repos/romastepa/3rd-party-integrations-magento-M2/releases/latest</apiurl>
            </ftp_settings>
            <async>
                <enable>0</enable>
                <frequency>2</frequency>
                <cron_expr>*/2 * * * *</cron_expr>
            </async>
        </emarsys_settings>
        <contacts_synchronization>
            <emarsys_emarsys>
                <realtime_sync>1</realtime_sync>
                <background_frequency>Daily</background_frequency>
                <unique_field>email</unique_field>
                <notification_secret_key>1234567890</notification_secret_key>
            </emarsys_emarsys>
        </contacts_synchronization>
        <opt_in>
            <optin_enable>
                <enable_optin>0</enable_optin>
            </optin_enable>
            <subscription_checkout_process>
                <newsletter_sub_checkout_yes_no>0</newsletter_sub_checkout_yes_no>
            </subscription_checkout_process>
        </opt_in>
        <transaction_mail>
            <transactionmail>
                <enable_customer>0</enable_customer>
            </transactionmail>
            <schema_check>
                <background_frequency_schema>Daily</background_frequency_schema>
            </schema_check>
        </transaction_mail>
        <smart_insight>
            <smart_insight>
                <smartinsight_enabled>0</smartinsight_enabled>
                <exportusing_emailidentifier>1</exportusing_emailidentifier>
                <exportguest_checkoutorders>1</exportguest_checkoutorders>
                <smartinsightfrequency>Daily</smartinsightfrequency>
            </smart_insight>
            <api_settings>
                <max_records_per_export_option>100,500,1000</max_records_per_export_option>
                <smartinsight_api_url>https://admin.scarabresearch.com/hapi/merchant/</smartinsight_api_url>
                <smartinsight_order_api_url_key>/sales-data/api</smartinsight_order_api_url_key>
                <smartinsight_product_api_url_key>/catalog/api</smartinsight_product_api_url_key>
            </api_settings>
        </smart_insight>
        <emarsys_predict>
            <enable>
                <product_feed>0</product_feed>
            </enable>
            <availability>
                <status>1</status>
                <in_stock>1</in_stock>
                <visibility>1</visibility>
            </availability>
        </emarsys_predict>
        <web_extend>
            <recommended_product_pages>
                <recommended_home_page>||</recommended_home_page>
                <recommended_category_page>||</recommended_category_page>
                <recommended_product_page>||</recommended_product_page>
                <recommended_cart_page>||</recommended_cart_page>
                <recommended_order_thankyou_page>||</recommended_order_thankyou_page>
                <recommended_nosearch_result_page>||</recommended_nosearch_result_page>
            </recommended_product_pages>
            <javascript_tracking>
                <enable_javascript_integration>0</enable_javascript_integration>
                <testmode>0</testmode>
                <identityregistered>email_address</identityregistered>
                <uniqueidentifier>sku</uniqueidentifier>
                <use_base_currency>1</use_base_currency>
                <tax_included>0</tax_included>
            </javascript_tracking>
        </web_extend>
        <logs>
            <log_setting>
                <enable>1</enable>
                <log_days>15</log_days>
                <log_cleaning>0</log_cleaning>
                <log_report>0</log_report>
            </log_setting>
        </logs>
        <about_emarsys>
            <emarsys_release>
                <release_url>https://github.com/emartech/3rd-party-integrations-magento-M2/releases/</release_url>
            </emarsys_release>
        </about_emarsys>
    </default>
</config>
